doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
    title Blog
  body
    nav
      ul(class="nav")
        li(class="nav-item") 
            a(href="/", class="nav-link") Home Page
        li 
          a(href="/about", class="nav-link") About
    .container
      h1 BLOG
      a.btn.btn-info.mb-3(href="/articles/new") New
      each article, index in articles
        .card.border-dark.my-3 
          img(src=`${article.image}`, alt="article-image")
          .card-body 
            h5.card-title= article.title
            p.card-text= article.description
            p= article.createdAt.toLocaleDateString()
            a.btn.btn-primary(href=`articles/${article.slug}`) Read More
            form(
              action=`/articles/${article.id}?_method=DELETE`
              method="POST"
              class="d-inline"
              )
                button.btn.btn-danger(type='submit') Delete
