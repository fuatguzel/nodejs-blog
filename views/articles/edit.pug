doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Edit
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
  body(style="background-color:#282c35;")
    .container(style="padding-top: 50px")
      h1(style="color:#ffa7c4;") Edit The Article
      form(action=`/articles/${article.id}?_method=PUT` method="POST")
        .form-group
          label(
            for="title"
            style="color:#fff;"
            ) Title
          input(type="text" 
          value=`${article.title}`
          id="title" name="title" class="form-control"
          required)
        .form-group
          label(
            for="description" 
            style="color:#fff;"
            ) Description   
          textarea(name="description", cols="30", rows="10"
          id="description"
          class="form-control"
          required)= article.description
        .form-group
          label(
            for="markdown"
            style="color:#fff;" 
            ) Markdown    
          textarea(name="markdown", cols="30", rows="10"
          id="markdown" class="form-control"
          required)= article.markdown
        a(
          class="btn"
          href="/"
          style="color:#DA0037;"
            ) Cancel  
        button(
          class="btn btn-primary py-6"
          type="submit"
            ) Save