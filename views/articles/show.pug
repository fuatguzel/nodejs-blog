doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
    title Show
  body
    nav
      ul(class="nav")
        li(class="nav-item") 
          a(href="/", class="nav-link") Home Page
        li 
          a(href="/about", class="nav-link") About
    .container
      h1= article.title 
      h6= article.createdAt.toLocaleDateString()
      a(href=`/articles/edit/${article.slug}`, class="btn btn-warning",
      ) Edit
      hr
      p include markdown-it article.sanitizedHtml
      //- img(src=`${article.image} ? ${article.image} || ''`, alt="article-image")
      
