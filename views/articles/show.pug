doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
    title Show
  body(style="background-color:#141414;")
  .container
    nav
      ul(class="nav")
        li(class="nav-item") 
          a(href="/", class="nav-link") Home Page
        li 
          a(href="/about", class="nav-link") About
    .container
      h1(style="color:#46B5D1;")= article.title 
      h6(style="color:#5F85DB;")= article.createdAt.toLocaleDateString()
      a(href=`/articles/edit/${article.id}`, class="btn btn-warning",
      ) Edit
      form(
              action=`/articles/${article.id}?_method=DELETE`
              method="POST"
              class="d-inline"
              )
                button.btn.btn-primary(type='submit') Delete
      hr
      p(style="color:#5F85DB;")= article.sanitizedHtml
      img(src=`${article.image}`, width="%50" alt="article-image")
      
