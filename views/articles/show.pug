doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
    title= article.title
  body(style="background-color:#282c35;")
  .container(style="padding-top: 50px")
    nav.navbar
      ul(class="navbar-nav")
        li(class="navbar nav-item") 
            a(href="/", class="nav-link" style="color:#D2D3C9;margin-right:10px;") Home Page
        li(class="navbar nav-item") 
          a(href="/about", class="nav-link" style="color:#D2D3C9;margin-right:10px;") About
    .container
      h1(style="color:#ffa7c4;")= article.title 
      h6(style="color:#5F85DB;float:right;")= article.createdAt.toLocaleDateString()
      a(href=`/articles/edit/${article.id}`, style="color:#E1E5EA;padding-left:5px;"
      ) Edit
      form(
              action=`/articles/${article.id}?_method=DELETE`
              method="POST"
              class="d-inline"
              )
                button(type='submit',style="color:#DA0037;background-color:#282c35;border:none;") Delete
      hr
      p(style="color:#D2D3C9;")= article.sanitizedHtml
      img(src=`${article.image}`, width="%50" alt="article-image")
      
